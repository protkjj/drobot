    <!-- Road: {{ name }} -->
    <model name="{{ name }}">
      <static>true</static>
      <pose>{{ pose.x }} {{ pose.y }} 0.001 0 0 {{ pose.yaw | default(0) }}</pose>
      <link name="link">
        <visual name="road_surface">
          <geometry><box><size>{{ length }} {{ width }} 0.01</size></box></geometry>
          <material>
            <ambient>{{ color.r }} {{ color.g }} {{ color.b }} 1</ambient>
            <diffuse>{{ color.r }} {{ color.g }} {{ color.b }} 1</diffuse>
          </material>
        </visual>
      </link>
    </model>
