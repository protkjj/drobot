<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Disable self-collision: base_link actuator mesh blocks arm rotation -->
  <gazebo>
    <self_collide>false</self_collide>
  </gazebo>

  <!-- Joint State Publisher -->
  <gazebo>
    <plugin filename="gz-sim-joint-state-publisher-system"
            name="gz::sim::systems::JointStatePublisher">
      <topic>/joint_states</topic>
    </plugin>
  </gazebo>

  <!-- Diff Drive -->
  <gazebo>
    <plugin filename="gz-sim-diff-drive-system"
            name="gz::sim::systems::DiffDrive">
      <left_joint>lf_wheel_con</left_joint>
      <left_joint>lr_wheel_con</left_joint>
      <right_joint>rf_wheel_con</right_joint>
      <right_joint>rr_wheel_con</right_joint>
      <wheel_separation>0.35</wheel_separation>  <!-- 0.298→0.35: 회전토크 소폭 증가 -->
      <wheel_radius>0.112</wheel_radius>
      <topic>/cmd_vel</topic>
    </plugin>
  </gazebo>

  <!-- Odometry from model pose -->
  <gazebo>
    <plugin filename="gz-sim-odometry-publisher-system"
            name="gz::sim::systems::OdometryPublisher">
      <odom_publish_frequency>50</odom_publish_frequency>
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
      <odom_topic>/odom</odom_topic>
    </plugin>
  </gazebo>

  <!-- ========== ARM JOINT POSITION CONTROLLERS ========== -->
  <!-- Servo spec: 25kg·cm (2.45 N·m), 0.13s/60° @ 6.8V -->
  <gazebo>
    <plugin filename="gz-sim-joint-position-controller-system"
            name="gz::sim::systems::JointPositionController">
      <joint_name>lf_arm_rev</joint_name>
      <topic>/model/drobot/joint/lf_arm_rev/cmd_pos</topic>
      <p_gain>5.0</p_gain>
      <i_gain>0.5</i_gain>
      <d_gain>1.0</d_gain>
      <i_max>1.0</i_max>
      <i_min>-1.0</i_min>
      <cmd_max>2.45</cmd_max>
      <cmd_min>-2.45</cmd_min>
    </plugin>
  </gazebo>

  <gazebo>
    <plugin filename="gz-sim-joint-position-controller-system"
            name="gz::sim::systems::JointPositionController">
      <joint_name>lr_arm_rev</joint_name>
      <topic>/model/drobot/joint/lr_arm_rev/cmd_pos</topic>
      <p_gain>5.0</p_gain>
      <i_gain>0.5</i_gain>
      <d_gain>1.0</d_gain>
      <i_max>1.0</i_max>
      <i_min>-1.0</i_min>
      <cmd_max>2.45</cmd_max>
      <cmd_min>-2.45</cmd_min>
    </plugin>
  </gazebo>

  <gazebo>
    <plugin filename="gz-sim-joint-position-controller-system"
            name="gz::sim::systems::JointPositionController">
      <joint_name>rf_arm_rev</joint_name>
      <topic>/model/drobot/joint/rf_arm_rev/cmd_pos</topic>
      <p_gain>5.0</p_gain>
      <i_gain>0.5</i_gain>
      <d_gain>1.0</d_gain>
      <i_max>1.0</i_max>
      <i_min>-1.0</i_min>
      <cmd_max>2.45</cmd_max>
      <cmd_min>-2.45</cmd_min>
    </plugin>
  </gazebo>

  <gazebo>
    <plugin filename="gz-sim-joint-position-controller-system"
            name="gz::sim::systems::JointPositionController">
      <joint_name>rr_arm_rev</joint_name>
      <topic>/model/drobot/joint/rr_arm_rev/cmd_pos</topic>
      <p_gain>5.0</p_gain>
      <i_gain>0.5</i_gain>
      <d_gain>1.0</d_gain>
      <i_max>1.0</i_max>
      <i_min>-1.0</i_min>
      <cmd_max>2.45</cmd_max>
      <cmd_min>-2.45</cmd_min>
    </plugin>
  </gazebo>

  <!-- ========== 2D LIDAR ========== -->
  <gazebo reference="lidar">
    <sensor name="lidar" type="gpu_lidar">
      <topic>/scan</topic>
      <gz_frame_id>lidar</gz_frame_id>
      <update_rate>10</update_rate>
      <always_on>true</always_on>
      <visualize>false</visualize>
      <lidar>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.15</min>
          <max>12.0</max>
          <resolution>0.01</resolution>
        </range>
      </lidar>
    </sensor>
  </gazebo>

  <!-- ========== IMU ========== -->
  <gazebo reference="imu_link">
    <sensor name="imu" type="imu">
      <topic>/imu</topic>
      <gz_frame_id>imu_link</gz_frame_id>
      <update_rate>50</update_rate>
      <always_on>true</always_on>
      <imu>
        <angular_velocity>
          <x><noise type="gaussian"><mean>0</mean><stddev>0.0002</stddev></noise></x>
          <y><noise type="gaussian"><mean>0</mean><stddev>0.0002</stddev></noise></y>
          <z><noise type="gaussian"><mean>0</mean><stddev>0.0002</stddev></noise></z>
        </angular_velocity>
        <linear_acceleration>
          <x><noise type="gaussian"><mean>0</mean><stddev>0.017</stddev></noise></x>
          <y><noise type="gaussian"><mean>0</mean><stddev>0.017</stddev></noise></y>
          <z><noise type="gaussian"><mean>0</mean><stddev>0.017</stddev></noise></z>
        </linear_acceleration>
      </imu>
    </sensor>
  </gazebo>

  <!-- ========== CAMERA ========== -->
  <gazebo reference="camera">
    <sensor name="camera" type="rgbd"> <gz_frame_id>camera</gz_frame_id>
      <update_rate>15</update_rate>
      <always_on>true</always_on>
      <visualize>true</visualize>
      <topic>/camera</topic> <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>10</far>
        </clip>
      </camera>
    </sensor>
  </gazebo>

  <!-- Wheel Friction -->
  <gazebo reference="left_front_wheel">
    <collision><surface>
      <friction><ode><mu>1.0</mu><mu2>0.15</mu2></ode></friction>
    </surface></collision>
  </gazebo>
  <gazebo reference="right_front_wheel">
    <collision><surface>
      <friction><ode><mu>1.0</mu><mu2>0.15</mu2></ode></friction>
    </surface></collision>
  </gazebo>
  <gazebo reference="left_rear_wheel">
    <collision><surface>
      <friction><ode><mu>1.0</mu><mu2>0.15</mu2></ode></friction>
    </surface></collision>
  </gazebo>
  <gazebo reference="right_rear_wheel">
    <collision><surface>
      <friction><ode><mu>1.0</mu><mu2>0.15</mu2></ode></friction>
    </surface></collision>
  </gazebo>

</robot>
